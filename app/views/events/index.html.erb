<div class="container sortable">
  <p style="color: green"><%= notice %></p>
  <h1 class="my-4">Events List</h1>
  <div class="sortable-events">
    <% @events.each do |event| %>
      <div class="row event-row border" data-event-id="<%= event.id %>">
        <div class="col-lg-1 drag-handle">
          <h5 class="p-1 bg-danger">Grip Icon</h5>
        </div>
        <div class="col-lg-3">
          <label class="caption regular">Event Name</label> <br>
          <%= event.name %>
        </div>
        <div class="col-lg-3">
          <label class="caption regular">Venue</label> <br>
          <%= event.venue %>
        </div>
        <div class="col-lg-2">
          <label class="caption regular">Priority</label> <br>
          <%= event.priority %>
        </div>
        <div class="col-lg-3">
          <strong>Actions</strong> <br>
          <%= link_to 'Show', event %>
          <%= link_to 'Edit', edit_event_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to 'New Event', new_event_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
